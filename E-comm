    <script>
        const app = {
            // --- STATE ---
            data: {
                products: [
                    { id: 1, name: 'Cyber Tee', price: 1899, gender: 'Men', category: 'T-Shirt', img: 'https://images.unsplash.com/photo-1583743814966-8936f5b7be1a?w=500' },
                    { id: 2, name: 'Flux Hoodie', price: 3499, gender: 'Men', category: 'Bottoms', img: 'https://images.unsplash.com/photo-1556905055-8f358a7a47b2?w=500' }, 
                    { id: 3, name: 'Void Shirt', price: 2499, gender: 'Men', category: 'Shirt', img: 'https://images.unsplash.com/photo-1602810318383-e386cc2a3ccf?w=500' },
                    { id: 4, name: 'Neo Polo', price: 2199, gender: 'Men', category: 'Polo', img: 'https://images.unsplash.com/photo-1626497748470-362376174828?w=500' },
                    { id: 5, name: 'Aura Crop', price: 1499, gender: 'Women', category: 'T-Shirt', img: 'https://images.unsplash.com/photo-1503342217505-b0a15ec3261c?w=500' },
                    { id: 6, name: 'Silk Breeze', price: 2299, gender: 'Women', category: 'Shirt', img: 'https://images.unsplash.com/photo-1598554747436-c9293d6a588f?w=500' },
                    { id: 7, name: 'Tech Cargo', price: 2899, gender: 'Women', category: 'Bottoms', img: 'https://images.unsplash.com/photo-1621295988775-68a83427181c?w=500' },
                    { id: 8, name: 'Retro Denim', price: 3299, gender: 'Women', category: 'Bottoms', img: 'https://images.unsplash.com/photo-1541099649105-f69ad21f3246?w=500' },
                ],
                cart: JSON.parse(localStorage.getItem('blixer_cart')) || [],
                user: JSON.parse(localStorage.getItem('blixer_user')) || null,
                filter: {
                    gender: 'Men',
                    category: 'All'
                }
            },

            // --- INIT ---
            init() {
                this.setupMouse();
                this.renderCartCount();
                this.prefillProfile();
                lucide.createIcons();
                
                // Show home initially
                this.navTo('home');
            },

            // --- MOUSE EFFECTS ---
            setupMouse() {
                const aura = document.getElementById('cursor-aura');
                let mouseX = 0, mouseY = 0;
                let auraX = 0, auraY = 0;

                document.addEventListener('mousemove', (e) => {
                    mouseX = e.clientX;
                    mouseY = e.clientY;
                    
                    // Tilt Effect
                    const cards = document.querySelectorAll('.tilt-card');
                    cards.forEach(card => {
                        const rect = card.getBoundingClientRect();
                        const x = e.clientX - rect.left;
                        const y = e.clientY - rect.top;
                        
                        // Check if mouse is near/over card
                        if(x > -50 && x < rect.width + 50 && y > -50 && y < rect.height + 50) {
                            const centerX = rect.width / 2;
                            const centerY = rect.height / 2;
                            const rotateX = ((y - centerY) / centerY) * -5; // Max -5deg to 5deg
                            const rotateY = ((x - centerX) / centerX) * 5;
                            card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.02)`;
                        } else {
                            card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale(1)';
                        }
                    });
                });

                // Smooth Aura Follow
                function animateAura() {
                    auraX += (mouseX - auraX) * 0.1;
                    auraY += (mouseY - auraY) * 0.1;
                    aura.style.left = `${auraX}px`;
                    aura.style.top = `${auraY}px`;
                    requestAnimationFrame(animateAura);
                }
                animateAura();
            },

            // --- NAVIGATION ---
            navTo(pageId) {
                // Hide all pages
                document.querySelectorAll('.page').forEach(el => {
                    el.classList.add('hidden');
                    el.style.opacity = 0;
                });

                // Show target page
                const target = document.getElementById(pageId);
                target.classList.remove('hidden');
                
                // Slight delay for fade in
                setTimeout(() => {
                    target.style.opacity = 1;
                }, 50);

                window.scrollTo({ top: 0, behavior: 'smooth' });

                // Render specific page logic
                if (pageId === 'shop') this.renderShop();
                if (pageId === 'checkout') this.renderCheckout();
                if (pageId === 'profile') this.prefillProfile();
            },

            // --- SHOP LOGIC ---
            selectGender(gender) {
                this.data.filter.gender = gender;
                this.data.filter.category = 'All';
                this.navTo('shop');
            },

            setFilter(type, value) {
                this.data.filter[type] = value;
                this.renderShop();
            },

            renderShop() {
                // Update UI Filters
                const genderBtns = {
                    Men: document.getElementById('filter-Men'),
                    Women: document.getElementById('filter-Women')
                };
                
                // Reset Gender UI
                Object.values(genderBtns).forEach(btn => {
                    btn.classList.remove('text-transparent', 'bg-clip-text', 'bg-gradient-to-r', 'from-purple-400', 'to-pink-400', 'opacity-100');
                    btn.classList.add('opacity-50');
                });
                
                // Activate Current Gender
                const activeBtn = genderBtns[this.data.filter.gender];
                if(activeBtn) {
                    activeBtn.classList.remove('opacity-50');
                    activeBtn.classList.add('text-transparent', 'bg-clip-text', 'bg-gradient-to-r', 'from-purple-400', 'to-pink-400', 'opacity-100');
                }

                // Update Category Pills
                document.querySelectorAll('.cat-pill').forEach(btn => {
                    const txt = btn.innerText;
                    const map = { 'ALL': 'All', 'TEES': 'T-Shirt', 'SHIRTS': 'Shirt', 'POLOS': 'Polo', 'BOTTOMS': 'Bottoms' };
                    if (map[txt] === this.data.filter.category) {
                        btn.style.background = 'linear-gradient(90deg, #6366f1, #a855f7)';
                        btn.style.borderColor = 'transparent';
                    } else {
                        btn.style.background = 'transparent';
                        btn.style.borderColor = 'rgba(255,255,255,0.1)';
                    }
                });

                // Filter Products
                const filtered = this.data.products.filter(p => {
                    const genderMatch = p.gender === this.data.filter.gender;
                    const catMatch = this.data.filter.category === 'All' || p.category === this.data.filter.category;
                    return genderMatch && catMatch;
                });

                // Render Grid
                const grid = document.getElementById('product-grid');
                grid.innerHTML = filtered.map(product => {
                    const inCart = this.data.cart.find(c => c.id === product.id);
                    const btnText = inCart ? `IN BAG: ${inCart.qty}` : 'ADD TO CART';
                    const btnClass = inCart ? 'bg-purple-600' : 'bg-white/5 hover:bg-white/10';

                    return `
                    <div class="tilt-card glass-panel p-4 rounded-[2rem] group relative hover:-translate-y-2 transition-transform duration-300">
                        <div class="aspect-[3/4] bg-zinc-900 rounded-2xl overflow-hidden mb-4 relative">
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors z-10"></div>
                            <img src="${product.img}" class="w-full h-full object-cover group-hover:scale-110 transition duration-700">
                        </div>
                        <div class="px-2 mb-4">
                            <h3 class="font-bold text-lg leading-tight mb-1">${product.name}</h3>
                            <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">${product.category}</p>
                            <p class="text-white font-black text-xl mt-2">₹${product.price.toLocaleString()}</p>
                        </div>
                        <button onclick="app.addToCart(${product.id})" class="w-full py-3 rounded-xl text-xs font-black tracking-widest ${btnClass} transition-colors border border-white/5">
                            ${btnText}
                        </button>
                    </div>`;
                }).join('');

                if(filtered.length === 0) {
                    grid.innerHTML = `<div class="col-span-full text-center py-20 text-gray-500 uppercase font-bold tracking-widest">No items found</div>`;
                }
            },

            // --- CART LOGIC ---
            addToCart(id) {
                const product = this.data.products.find(p => p.id === id);
                const existing = this.data.cart.find(c => c.id === id);

                if (existing) {
                    existing.qty++;
                } else {
                    this.data.cart.push({ ...product, qty: 1 });
                }

                this.saveCart();
                this.renderShop(); // Update buttons
                this.showToast(`${product.name} added to bag`);
            },

            updateQty(id, change) {
                const itemIndex = this.data.cart.findIndex(c => c.id === id);
                if (itemIndex > -1) {
                    this.data.cart[itemIndex].qty += change;
                    if (this.data.cart[itemIndex].qty <= 0) {
                        this.data.cart.splice(itemIndex, 1);
                    }
                    this.saveCart();
                    this.renderCheckout();
                }
            },

            clearCart() {
                this.data.cart = [];
                this.saveCart();
                this.renderCheckout();
                this.showToast("Cart cleared", "info");
            },

            saveCart() {
                localStorage.setItem('blixer_cart', JSON.stringify(this.data.cart));
                this.renderCartCount();
            },

            renderCartCount() {
                const count = this.data.cart.reduce((a, b) => a + b.qty, 0);
                const badge = document.getElementById('cart-badge');
                badge.innerText = count;
                
                // Animation pop
                if (count > 0) {
                    badge.classList.remove('scale-0');
                    badge.classList.add('scale-110');
                    setTimeout(() => badge.classList.remove('scale-110'), 200);
                } else {
                    badge.classList.add('scale-0');
                }
            },

            renderCheckout() {
                const container = document.getElementById('cart-container');
                const emptyState = document.getElementById('empty-state');
                const summarySub = document.getElementById('summary-subtotal');
                const summaryTot = document.getElementById('summary-total');

                // Profile Checks
                const profilePreview = document.getElementById('checkout-profile-preview');
                const profileWarn = document.getElementById('checkout-profile-warning');

                if (this.data.user) {
                    profilePreview.classList.remove('hidden');
                    profileWarn.classList.add('hidden');
                    document.getElementById('cp-name').innerText = this.data.user.name;
                    document.getElementById('cp-address').innerText = this.data.user.address;
                } else {
                    profilePreview.classList.add('hidden');
                    profileWarn.classList.remove('hidden');
                }

                if (this.data.cart.length === 0) {
                    container.innerHTML = '';
                    emptyState.classList.remove('hidden');
                    summarySub.innerText = '₹0';
                    summaryTot.innerText = '₹0';
                    return;
                }

                emptyState.classList.add('hidden');
                let total = 0;

                container.innerHTML = this.data.cart.map(item => {
                    total += item.price * item.qty;
                    return `
                    <div class="glass-panel p-4 rounded-[1.5rem] flex gap-4 items-center group hover:bg-white/5 transition duration-300">
                        <img src="${item.img}" class="w-20 h-20 rounded-xl object-cover border border-white/10">
                        <div class="flex-1">
                            <h4 class="font-bold text-lg">${item.name}</h4>
                            <p class="text-xs text-purple-400 font-bold uppercase tracking-widest">${item.category}</p>
                            <p class="font-bold mt-1">₹${item.price.toLocaleString()}</p>
                        </div>
                        <div class="flex items-center gap-3 bg-black/40 rounded-full px-3 py-1 border border-white/10">
                            <button onclick="app.updateQty(${item.id}, -1)" class="w-6 h-6 flex items-center justify-center hover:text-purple-400 transition font-bold">-</button>
                            <span class="text-sm font-bold w-4 text-center">${item.qty}</span>
                            <button onclick="app.updateQty(${item.id}, 1)" class="w-6 h-6 flex items-center justify-center hover:text-purple-400 transition font-bold">+</button>
                        </div>
                    </div>`;
                }).join('');

                summarySub.innerText = `₹${total.toLocaleString()}`;
                summaryTot.innerText = `₹${total.toLocaleString()}`;
            },

            placeOrder() {
                if (!this.data.user) {
                    this.showToast("Please complete your profile", "error");
                    setTimeout(() => this.navTo('profile'), 1000);
                    return;
                }
                if (this.data.cart.length === 0) {
                    this.showToast("Your bag is empty", "error");
                    return;
                }

                this.showToast(`Order Confirmed! ID: #${Math.floor(Math.random()*99999)}`);
                this.data.cart = [];
                this.saveCart();
                setTimeout(() => this.navTo('home'), 2000);
            },

            // --- PROFILE LOGIC ---
            saveProfile(e) {
                e.preventDefault();
                this.data.user = {
                    name: document.getElementById('p-name').value,
                    email: document.getElementById('p-email').value,
                    phone: document.getElementById('p-phone').value,
                    address: document.getElementById('p-address').value
                };
                
                localStorage.setItem('blixer_user', JSON.stringify(this.data.user));
                this.showToast("Profile Saved Successfully");
                
                // If cart has items, go to checkout, else shop
                if(this.data.cart.length > 0) {
                    setTimeout(() => this.navTo('checkout'), 500);
                } else {
                    setTimeout(() => this.navTo('shop'), 500);
                }
            },

            prefillProfile() {
                if (this.data.user) {
                    document.getElementById('p-name').value = this.data.user.name;
                    document.getElementById('p-email').value = this.data.user.email;
                    document.getElementById('p-phone').value = this.data.user.phone;
                    document.getElementById('p-address').value = this.data.user.address;
                }
            },

            // --- UI UTILS ---
            showToast(msg, type = 'success') {
                const container = document.getElementById('toast-container');
                const toast = document.createElement('div');
                toast.className = 'toast';
                
                let iconName = type === 'success' ? 'check-circle' : 'alert-circle';
                if(type === 'info') iconName = 'info';

                let colorClass = type === 'error' ? 'text-red-400' : 'text-purple-400';

                toast.innerHTML = `
                    <i data-lucide="${iconName}" class="w-5 h-5 ${colorClass}"></i>
                    <span>${msg}</span>
                `;
                
                container.appendChild(toast);
                lucide.createIcons();

                // Auto remove
                setTimeout(() => {
                    toast.style.opacity = '0';
                    toast.style.transform = 'translateY(20px)';
                    setTimeout(() => toast.remove(), 400);
                }, 3000);
            }
        };

        // Initialize App
        window.addEventListener('DOMContentLoaded', () => {
            app.init();
        });
    </script>
</body>
</html>
